<Window x:Class="StudentInfoSystem.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblInputUserName" Content="Потребителско име:" HorizontalAlignment="Left" Margin="101,124,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtInputUserName" HorizontalAlignment="Left" Height="23" Margin="228,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblPassword" Content="Парола:" HorizontalAlignment="Left" Margin="101,163,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtInputPassword" HorizontalAlignment="Left" Height="23" Margin="228,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLogin" Content="Вход" HorizontalAlignment="Left" Margin="228,205,0,0" VerticalAlignment="Top" Width="120" Click="BtnLogin_Click"/>
    </Grid>
</Window>
